<div class="calendar-header">
  <div class="pull-left">
    <h3>{{displayedMonth}} ({{displayedYear}})</h3>
  </div>

  <div class="pull-right">
    <span class="fa fa-forward pull-right" {{action "getNextMonth"}}></span>
    <span class="fa fa-backward pull-left" {{action "getPreviousMonth"}}></span>
  </div>
</div>

<table>
  <tr>
    {{#each day in weekdays}}
      <th>{{day}}</th>
    {{/each}}
  </tr>

  {{#each row in dayRows}} 
    <tr>
      {{#each day in row}}
        <td {{bind-attr class="day.today:today day.active:active day.highlight:highlight"}} {{action "setActive" day}}>{{day.day}}</td>
      {{/each}}
    </tr>
  {{/each}}
</table>