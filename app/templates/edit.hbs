{{#modal-widget title='Add new note' 
                close="cancel" 
                ok="saveNote"
                backgroundClass=controller.selectedColor }}
  <form>
    <div class="form-group">
      {{input type="text" class="form-control" placeholder="Title..." value=title}}
    </div>
  
    <div class="form-group colors pull-left">
      <div class="color gray" {{action "selectColor" "gray"}}></div>
      <div class="color yellow" {{action "selectColor" "yellow"}}></div>
      <div class="color green" {{action "selectColor" "green"}}></div>
      <div class="color orange" {{action "selectColor" "orange"}}></div>
      <div class="color red" {{action "selectColor" "red"}}></div>
      <div class="color blue" {{action "selectColor" "blue"}}></div>
      <div class="color violet" {{action "selectColor" "violet"}}></div>
    </div>

    <div class="form-group pull-right">
      {{input type="text" class="form-control date-picker" placeholder="Date..." value=date}}
    </div>

    <div class="form-group">
      {{textarea class="form-control" placeholder="Text..." value=text}}
    </div>
  </form>
{{/modal-widget}}